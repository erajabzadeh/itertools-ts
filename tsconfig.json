{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist/lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "include": [
    "./src"
  ]
}